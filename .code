#include <Servo.h>

int bumper = 5;
Servo rightMotor;
Servo leftMotor;

void setup() {
Serial.begin(9600);
rightMotor.attach(9);
leftMotor.attach(10);
pinMode(bumper,INPUT);
}

void loop() {
    for (int i = 110; i<=180; i++)
    {
      rightMotor.write(i);
      leftMotor.write(i);
      delay(15);
   }
   for (int j = 180; j>=110; j--)
   {
     rightMotor.write(j);
     leftMotor.write(j);
     delay(15);
   }
   if (digitalRead(bumper)==HIGH){
     Serial.println("button on");
     leftMotor.write(90);
     rightMotor.write(90);
     
     for (int j = 90; j>=0; j--)
     {
        rightMotor.write(j);
     }
     for (int i = 0; i<=90; i++)
     {
        rightMotor.write(i);
     }
   }
 }
